    "version": "0.2.0",
    "configurations": [
        {
            "name": "test_amender",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/amender",
            "args": [
                "${workspaceFolder}/build/nihao",
                "100",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "test_monitor",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/monitor",
            "args": [
                "${workspaceFolder}/build/nihao",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        },
    ]
}